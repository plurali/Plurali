{
  "name": "@liliana/plurali",
  "version": "1.0.0",
  "repository": "git@github.com:lilianalillyy/plurali.git",
  "author": "Liliana V. <lilianalillyy@gmail.com>",
  "license": "MIT",
  "homepage": "https://plurali.icu",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn common build && concurrently 'yarn frontend build' 'yarn backend build'",
    "lint": "eslint --ignore-path .gitignore .",
    "common": "yarn workspace @plurali/common",
    "backend": "yarn workspace @plurali/backend",
    "frontend": "yarn workspace @plurali/frontend",
    "db": "yarn prisma"
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "babel-eslint": "^10.1.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": "eslint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
