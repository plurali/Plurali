{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@domain/*": ["../../src/domain/*"],
      "@infra/*": ["../../src/infrastructure/*"],
      "@app/*": ["../../src/application/*"],
      "@observer/*": ["../../src/observer/*"],
    }
  },
  "exclude": [
    "../../src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
