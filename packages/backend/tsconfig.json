{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2018",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "strict": false,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "buildOptions": {
    "incremental": false
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
