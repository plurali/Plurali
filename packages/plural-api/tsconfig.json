{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "downlevelIteration": true,
        "skipLibCheck": true,
        "noEmit": true,
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}